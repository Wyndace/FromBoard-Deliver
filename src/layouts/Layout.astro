---
interface Props {
  title: string
}

const { title } = Astro.props

import "../styles/formular-font.css"
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Site for SLW Portfolio (Vaisilev Alexander)"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>
      {title}
    </title>
  </head>
  <body class="bg-gray-200">
    <header></header>
    <main class="max-w-2xl w-full">
      <slot />
    </main>
  </body>
  <footer></footer>
</html>
